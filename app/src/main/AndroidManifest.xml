<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shyling.healthmanager"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".HealthManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoadingActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:launchMode="singleTop" >
           <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>-->
        </activity>
        <activity android:name=".activity.TestingActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name=".activity.SettingActivity" android:parentActivityName=".activity.MainActivity" android:label="设置"/>
        <activity android:name=".activity.PersonActivity" android:parentActivityName=".activity.SettingActivity" android:label="个人信息"/>
        <activity android:name=".activity.LoginActivity" android:launchMode="singleTask"/>
        <activity android:name=".activity.RegisterActivity" android:parentActivityName=".activity.LoginActivity" android:label="注册用户"/>
        <activity android:name=".activity.ValidateActivity" android:parentActivityName=".activity.LoginActivity" android:label="验证信息"/>
        <activity android:name=".activity.ForgetActivity" android:parentActivityName=".activity.ValidateActivity" android:label="重置密码"/>
    </application>

</manifest>
